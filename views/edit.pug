extends layout

block content
   .row
    .col-md-4
       .card 
            .card-header 
                h3 Edit a task
            .card-body 
                form(method="POST", action="/editTask/" + todo.id + "?_method=PUT")  
                    .form-group
                        label(for='todo') Edit a task
                        input.form-control#todo(type='text', value=todo.title, name="title")
                    button(type="submit").btn.btn-primary.btn-block
                        | Update
                        i.fas.fa-pencil-alt.pl-1